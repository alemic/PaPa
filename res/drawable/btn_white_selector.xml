<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true"><shape>
            <solid android:color="#FF66CC99" />

            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />

            <stroke android:width="1dp" android:color="#FF66CC99" />
        </shape></item>
    <item android:state_pressed="true"><shape>
            <solid android:color="#FF66CC99" />

            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />

            <stroke android:width="1dp" android:color="#FF66CC99" />
        </shape></item>
    <item><shape>
            <solid android:color="@android:color/transparent" />

            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />

            <stroke android:width="0.5dp" android:color="#88FCFCFC" />
        </shape></item>

</selector>